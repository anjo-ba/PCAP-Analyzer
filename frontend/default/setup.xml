<setup>
    <block title="Configure Google Safe Browsing API" endpoint="traffic-analyzer/ta-conf" entity="Custom Configuration">
        <text>
            &lt;i&gt;Configure Safe Browsing API&lt;/i&gt;
        </text>
        <input field="safe_browsing_api_key">
            <label>Safe Browsing API key</label>
            <type>text</type>
        </input>
        <input field="pcap_location">
            <label>PCAP Location</label>
            <type>text</type>
        </input>
    </block>
    <block title="Configure pcap collection"
           endpoint="data/inputs/script"
           entity=".%2Fbin%2Fconvert_enrich.sh">
           <input field="interval">
               <label>Scheduled interval (in seconds or as cron schedule)</label>
               <type>text</type>
           </input>
    </block>
    <block title="Configure collection of current information"
           endpoint="data/inputs/script"
           entity=".%2Fbin%2Fdownload.sh">
           <input field="interval">
               <label>Scheduled interval (in seconds or as cron schedule)</label>
               <type>text</type>
           </input>
    </block>
</setup>