<form stylesheet="customStyle.css" script="tokenStorer.js">
  <label>Security</label>
  <search id="source_security">
    <query>
      $source_token$
      | fields cipher_suite_number, tcp_stream,traffic_analyzer_stream, tls_ssl_version_negotiated, -*
      | table cipher_suite_number, tcp_stream,traffic_analyzer_stream, tls_ssl_version_negotiated
    </query>
  </search>
  <search base="source_security" id="recommended_cipher_suites">
    <query>
      | dedup cipher_suite_number
      | join cipher_suite_number
        [search sourcetype=list source="*cipher_suites.csv"]
      | table cipher_suite_number, recommended
    </query>
  </search>
  <search base="source_security" id="is_secure">
    <query>
      | eval issecure=if(cipher_suite_number=="","no","yes")
      | table issecure
      | top issecure
    </query>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="multiselect" token="source_token" searchWhenChanged="false">
      <label>Choose capture file:</label>
      <default>*</default>
      <prefix>(sourcetype=capture </prefix>
      <suffix>)</suffix>
      <valuePrefix>source="*/</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <choice value="*">ALL</choice>
      <fieldForLabel>shortSource</fieldForLabel>
      <fieldForValue>shortSource</fieldForValue>
      <search>
        <query>
          sourcetype=capture
          | dedup source
          | rex field=source "\S*\/(?&lt;shortSource&gt;[^\)].*)"
          | table shortSource
          | sort shortSource
        </query>
      </search>
    </input>
    <input type="text" searchWhenChanged="true" token="filteredMAC">
      <label>Show for following  Device (MAC):</label>
      <default>*</default>
    </input>
    <input type="dropdown" token="ip_range" searchWhenChanged="false">
      <label>Define internal IP range</label>
      <choice value="default">Default (RFC 1918)</choice>
      <choice value="custom">Custom</choice>
      <change>
        <condition label="Default (RFC 1918)">
          <set token="use_default_ip_range">true</set>
          <unset token="use_custom_ip_range"/>
          <set token="custom_ip_range">203.0.113.0/24</set>
          <set token="form.custom_ip_range">203.0.113.0/24</set>
        </condition>
        <condition label="Custom">
          <unset token="use_default_ip_range"/>
          <set token="use_custom_ip_range">true</set>
        </condition>
      </change>
      <default>default</default>
    </input>
    <input type="text" token="custom_ip_range" depends="$use_custom_ip_range$">
      <label>Internal IP range:</label>
      <default/>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Total number of tcp streams</title>
      <single>
        <search base="source_security">
          <query>
            | where tcp_stream!=""
            | dedup traffic_analyzer_stream
            | stats count as "# of streams"
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">0</option>
        <option name="showTrendIndicator">0</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <title>Number of inadvisable cipher suites used</title>
      <single>
        <title>Absolute</title>
        <search base="recommended_cipher_suites">
          <query>
            | stats count as amount by recommended
            | where recommended="N"
            | table amount
            | appendpipe [stats count | where count=0 | eval amount=0 | table amount]
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">0</option>
        <option name="showTrendIndicator">0</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
      <single>
        <title>Percent</title>
        <search base="recommended_cipher_suites">
          <query>
            | eventstats count as amount by recommended
            | eventstats count as totalAmount
            | where recommended="N" | dedup recommended
            | eval percOfTotal= 100 / totalAmount * amount
            | table percOfTotal
            | appendpipe [stats count | where count=0 | eval percOfTotal=0 | table percOfTotal]
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["#20C028","#FCFC37","#FCCC37","#FC9937", "#FC4737"]</option>
        <option name="rangeValues">[4.99,19.99,34.99,49.99]</option>
        <option name="showSparkline">0</option>
        <option name="showTrendIndicator">0</option>
        <option name="unit">%</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <title>Amount of unsecured traffic (by # of packets)</title>
      <single>
        <title>Absolute</title>
        <search base="is_secure">
          <query>
            | where issecure="no"
            | table count
            | appendpipe [stats count | where count=0 | eval count=0 | table count]
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["#53A051","#0877A6","#F8BE34","#F1813F","#DC4E41"]</option>
        <option name="showSparkline">0</option>
        <option name="showTrendIndicator">0</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
      <single>
        <title>Percent</title>
        <search base="is_secure">
          <query>
            | where issecure="no"
            | table percent
            | appendpipe [stats count | where count=0 | eval percent=0 | table percent]
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0.00</option>
        <option name="showSparkline">0</option>
        <option name="showTrendIndicator">0</option>
        <option name="unit">%</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Commonly used cipher suites</title>
      <table>
        <search base="source_security">
          <query>
            | dedup traffic_analyzer_stream
            | stats count as "# of streams" by cipher_suite_number
            | join cipher_suite_number
              [search sourcetype=list source="*cipher_suites.csv"]
            | table cipher_suite_number, description, recommended, "# of streams"
            | rename cipher_suite_number as "Nr.", description as Description, recommended as Recommended
            | sort "# of streams" desc
          </query>
        </search>
        <option name="count">10</option>
        <format type="color" field="Recommended">
          <colorPalette type="map">{"N":#FC4737}</colorPalette>
        </format>
        <drilldown>
          <link target="_blank">search?q=$source_token$%20%7C%20dedup%20traffic_analyzer_stream%20%7C%20where%20cipher_suite_number=$click.value$%20%7C%20where%20src_is_private_ip=%221%22%20OR%20cidrmatch(%22$custom_ip_range$%22,%20ip_src)%7C%20dedup%20ip_dst%20cipher_suite_number%20ip_src%20%7C%20join%20cipher_suite_number%0A%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%5B%20search%20sourcetype=list%20source=%22*cipher_suites.csv%22%20%5D%20%7C%20table%20ip_dst,%20dst_fqdn,%20cipher_suite_number,%20description,%20recommended,%20ip_src%20%7C%20sort%20ip_dst%20%7C%20mvcombine%20ip_src&amp;earliest=$earliest$&amp;latest=$latest$</link>
        </drilldown>
      </table>
    </panel>
    <panel>
      <title>Commonly used SSL/TLS version</title>
      <table>
        <search base="source_security">
          <query>
            | dedup traffic_analyzer_stream
            | stats count as "# of streams" by tls_ssl_version_negotiated
            | join tls_ssl_version_negotiated
              [search sourcetype=list source="*tls-versions.csv"
              | rename tls_record_version as tls_ssl_version_negotiated]
            | table tls_ssl_version_negotiated, description, "# of streams"
            | rename tls_ssl_version_negotiated as "Version", description as Description
            | sort "# of streams" desc
          </query>
        </search>
      </table>
    </panel>
  </row>
</form>