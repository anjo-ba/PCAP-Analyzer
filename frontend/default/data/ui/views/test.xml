<form>
  <label>Test</label>
  <search id="base_search">
    <query>source="capture-2019-04-03_09-59-38-UTC-enriched.csv" </query>
  </search>
  <fieldset submitButton="false" autoRun="true">
    <input type="radio" token="direction">
      <label>Direction of traffic</label>
      <choice value="out">outgoing</choice>
      <choice value="in">incoming</choice>
      <default>out</default>
      <change>
        <condition value="in">
          <set token="directionHeader">sources</set>
          <set token="searchString">
            source="capture-2019-04-03_09-59-38-UTC-enriched.csv" ip_dst=$ip$ | stats sum(linecount) as "# of packages" by src_fqdn  | sort $limit$ -num("# of packages")
          </set>
        </condition>
        <condition value="out">
          <set token="directionHeader">destination</set>
          <set token="searchString">
            source="capture-2019-04-03_09-59-38-UTC-enriched.csv" ip_src=$ip$ | stats sum(linecount) as "# of packages" by dst_fqdn | sort $limit$ -num("# of packages")
          </set>
        </condition>
      </change>
    </input>
    <input type="text" searchWhenChanged="true" token="limit">
      <label>Show top n results:</label>
      <default>5</default>
    </input>
    <input type="text" searchWhenChanged="true" token="ip">
      <label>Show for following  IP:</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Top $limit$ $directionHeader$</title>
        <search>
          <query>$searchString$</query>
        </search>
      </table>
    </panel>
  </row>
</form>