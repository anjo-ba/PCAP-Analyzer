<form>
  <label>Test</label>
  <search id="base_search">
    <query>source="capture-2019-03-19_06-31-46-utc-enriched.csv" </query>
  </search>
  <fieldset submitButton="false" autoRun="true">
    <input type="text" searchWhenChanged="true" token="limit">
      <label>Show top n results:</label>
      <default>5</default>
    </input>
    <input type="text" searchWhenChanged="true" token="ip">
      <label>Show for following  IP:</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Top $limit$ sources</title>
        <search>
          <query>source="capture-2019-03-19_06-31-46-utc-enriched.csv" ip_dst=$ip$ | stats sum(linecount) as "# of packages" by src_fqdn  | sort $limit$ -num("# of packages")</query>
        </search>
      </table>
    </panel>
    <panel>
      <table>
        <title>Top $limit$ destinations</title>
        <search>
          <query>source="capture-2019-03-19_06-31-46-utc-enriched.csv" ip_src=$ip$ | stats sum(linecount) as "# of packages" by dst_fqdn | sort $limit$ -num("# of packages")</query>
        </search>
      </table>
    </panel>
  </row>
</form>