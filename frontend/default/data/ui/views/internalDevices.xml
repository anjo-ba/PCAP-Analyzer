<form stylesheet="customStyle.css" script="tokenStorer.js">
  <label>Internal Endpoints</label>
  <search id="source_internal_endpoints">
     <query>
     $source_token$ eth_src=$filteredMAC$
      | fields ip_src, ip_dst, frame_len, src_is_private_ip, eth_src, tls_handshake_type, _*
      | table ip_src, ip_dst, frame_len, src_is_private_ip, eth_src, tls_handshake_type
    </query>
    <done>
       <condition>
         <set token="subsearch_sid">$job.sid$</set>
       </condition>
     </done>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="multiselect" token="source_token" searchWhenChanged="false">
      <label>Choose capture file:</label>
      <default>*</default>
      <prefix>(sourcetype=capture </prefix>
      <suffix>)</suffix>
      <valuePrefix>source="*/</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <choice value="*">ALL</choice>
      <fieldForLabel>shortSource</fieldForLabel>
      <fieldForValue>shortSource</fieldForValue>
      <search>
        <query>sourcetype=capture
              | dedup source
              | rex field=source "\S*\/(?&lt;shortSource&gt;[^\)].*)"
              | table shortSource
              | sort shortSource
        </query>
      </search>
    </input>
    <input type="text" searchWhenChanged="true" token="filteredMAC">
      <label>Show for following  Device (MAC):</label>
      <default>*</default>
    </input>
    <input type="dropdown" token="ip_range" searchWhenChanged="false">
      <label>Define internal IP range</label>
      <choice value="default">Default (RFC 1918)</choice>
      <choice value="custom">Custom</choice>
      <change>
        <condition label="Default (RFC 1918)">
          <set token="use_default_ip_range">true</set>
          <unset token="use_custom_ip_range"></unset>
          <set token="custom_ip_range">1.2.3.4/32</set>
          <set token="form.custom_ip_range">1.2.3.4/32</set>
        </condition>
        <condition label="Custom">
          <unset token="use_default_ip_range"></unset>
          <set token="use_custom_ip_range">true</set>
        </condition>
      </change>
      <default>default</default>
    </input>
    <input type="text" token="custom_ip_range" depends="$use_custom_ip_range$">
      <label>Internal IP range:</label>
      <default></default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Endpoints</title>
      <table>
        <search base="source_internal_endpoints">
          <query>
                | dedup ip_src
                | eval src_is_private_extended=if(
                  cidrmatch(&quot;$custom_ip_range$&quot;, ip_src) OR
                  src_is_private_ip == "True","True", "False")
                | where src_is_private_extended == "True"
                | where ip_src!="" AND ip_src!="0.0.0.0"
                | eval eth_short=substr(eth_src,1,8)
                | join type=left eth_short
                  [search sourcetype="list" source="*mac_vendor.csv"]
                | fillnull value="no vendor found"
                | table eth_src, vendor, ip_src
                | dedup ip_src
                | rename ip_src as ip
                | join type=left ip
                  [| loadjob $subsearch_sid$
                  | stats sum(frame_len) as "bytes out" by ip_src
                  | rename ip_src as ip ]
                | join type=left ip
                  [| loadjob $subsearch_sid$
                  | stats sum(frame_len) as "bytes in" by ip_dst
                  | rename ip_dst as ip ]
                | join type=left ip
                  [| loadjob $subsearch_sid$
                  | rename ip_src as ip
                  | where tls_handshake_type=1
                  | eval client_hello=1
                  | table client_hello, ip ]
                | fillnull value=0
          </query>
        </search>
      </table>
    </panel>
  </row>
</form>