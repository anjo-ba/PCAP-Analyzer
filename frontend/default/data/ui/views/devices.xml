<form stylesheet="customStyle.css">
  <label>Devices</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="multiselect" token="source_token" searchWhenChanged="true">
      <label>Choose capture file:</label>
      <default>*</default>
      <prefix>(sourcetype=capture </prefix>
      <suffix>)</suffix>
      <valuePrefix>source="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <choice value="*">ALL</choice>
      <fieldForLabel>source</fieldForLabel>
      <fieldForValue>source</fieldForValue>
      <search>
        <query>sourcetype=capture
              | dedup source
              | table source
        </query>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Endpoints</title>
        <search>
          <query>$source_token$
                | where ip_src!=""
                | table ip_src, src_fqdn
                | dedup ip_src
                | rename ip_src as ip
                | join type=left ip
                  [search $source_token$
                  | stats sum(frame_cap_len) as "bytes out" by ip_src
                  | rename ip_src as ip ]
                | join type=left ip
                  [search $source_token$
                  | stats sum(frame_cap_len) as "bytes in" by ip_dst
                  | rename ip_dst as ip ]
                | join type=left ip
                  [search $source_token$
                  | rename ip_src as ip
                  | where tls_handshake_type=1
                  | eval client_hello=1
                  | table client_hello, ip ]
                | fillnull value=0
          </query>
        </search>
      </table>
    </panel>
  </row>
</form>
